<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/custom_profile_image"
    android:layout_height="@dimen/custom_profile_image"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="@dimen/custom_profile_image"
        android:layout_height="@dimen/custom_profile_image"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_profile_image"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_cluster1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffea02"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_cluster2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#df4c17"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cluster"
            android:layout_width="0dp"
            android:layout_height="@dimen/custom_profile_image"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_cluster3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#00f704"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_cluster4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#4203ff"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/amu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha=".8"
        android:background="@android:color/black"
        android:paddingLeft="@dimen/custom_profile_padding"
        android:paddingRight="@dimen/custom_profile_padding"
        android:textAppearance="@style/amu_Bubble.TextAppearance.Light" />

</FrameLayout>